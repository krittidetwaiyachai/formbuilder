generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(uuid())
  email        String         @unique
  password     String?
  firstName    String?
  lastName     String?
  roleId       String
  googleId     String?        @unique
  photoUrl     String?
  provider     String         @default("local")
  sessionToken String?
  lastActiveAt DateTime?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  responses    FormResponse[]
  formsCreated Form[]         @relation("FormCreator")
  formsCollaborated Form[]    @relation("FormCollaborators")
  activityLogs ActivityLog[]
  folders      Folder[]
  bundlesCreated Bundle[]     @relation("BundleCreator")
  role         Role           @relation(fields: [roleId], references: [id])

  @@map("users")
}

model Role {
  id          String   @id @default(uuid())
  name        RoleType @unique
  description String?
  permissions Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  users       User[]

  @@map("roles")
}

model Folder {
  id        String   @id @default(uuid())
  name      String
  color     String?  @default("#6366f1")
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  forms     Form[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("folders")
}

model Form {
  id           String           @id @default(uuid())
  title        String
  description  String?
  status       FormStatus       @default(DRAFT)
  isQuiz       Boolean          @default(false)
  viewCount    Int              @default(0)
  quizSettings    Json?
  welcomeSettings Json?
  thankYouSettings Json?
  settings        Json?
  notificationSettings Json?
  pageSettings    Json?
  createdById  String
  folderId     String?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  conditions   FieldCondition[]
  fields       Field[]
  responses    FormResponse[]
  createdBy    User             @relation("FormCreator", fields: [createdById], references: [id])
  folder       Folder?          @relation(fields: [folderId], references: [id], onDelete: SetNull)
  collaborators User[]          @relation("FormCollaborators")
  bundleFields BundleField[]
  logicRules   LogicRule[]
  activityLogs ActivityLog[]
  views        FormView[]

  @@map("forms")
}

model FormView {
  id          String   @id @default(uuid())
  formId      String
  fingerprint String
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())
  form        Form     @relation(fields: [formId], references: [id], onDelete: Cascade)

  @@unique([formId, fingerprint])
  @@map("form_views")
}

model Field {
  id              String           @id @default(uuid())
  formId          String
  type            FieldType
  label           String
  placeholder     String?
  required        Boolean          @default(false)
  validation      Json?
  order           Int              @default(0)
  options         Json?
  correctAnswer   String?
  score           Int?
  groupId         String?
  shrink          Boolean          @default(false)
  isPII           Boolean          @default(false)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  conditions      FieldCondition[] @relation("SourceField")
  targetCondition FieldCondition[] @relation("TargetField")
  logicConditions LogicCondition[]
  logicActions    LogicAction[]
  form            Form             @relation(fields: [formId], references: [id], onDelete: Cascade)
  answers         ResponseAnswer[]
  parentGroup     Field?           @relation("FieldGroup", fields: [groupId], references: [id], onDelete: Cascade)
  childFields     Field[]          @relation("FieldGroup")

  @@map("fields")
}

model FieldCondition {
  id            String   @id @default(uuid())
  formId        String
  sourceFieldId String
  targetFieldId String
  operator      String
  value         String
  action        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  form          Form     @relation(fields: [formId], references: [id], onDelete: Cascade)
  sourceField   Field    @relation("SourceField", fields: [sourceFieldId], references: [id], onDelete: Cascade)
  targetField   Field    @relation("TargetField", fields: [targetFieldId], references: [id], onDelete: Cascade)

  @@map("field_conditions")
}

model LogicRule {
  id          String           @id @default(uuid())
  formId      String
  name        String
  logicType   String           @default("and")
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  form        Form             @relation(fields: [formId], references: [id], onDelete: Cascade)
  conditions  LogicCondition[]
  actions     LogicAction[]

  @@map("logic_rules")
}

model LogicCondition {
  id       String    @id @default(uuid())
  ruleId   String
  fieldId  String?
  operator String
  value    String?
  rule     LogicRule @relation(fields: [ruleId], references: [id], onDelete: Cascade)
  field    Field?    @relation(fields: [fieldId], references: [id], onDelete: Cascade)

  @@map("logic_conditions")
}

model LogicAction {
  id      String    @id @default(uuid())
  ruleId  String
  type    String
  fieldId String?
  rule    LogicRule @relation(fields: [ruleId], references: [id], onDelete: Cascade)
  field   Field?    @relation(fields: [fieldId], references: [id], onDelete: Cascade)

  @@map("logic_actions")
}

model Bundle {
  id               String           @id @default(uuid())
  name             String
  description      String?
  isPII            Boolean          @default(false)
  sensitivityLevel SensitivityLevel @default(LOW)
  version          Int              @default(1)
  isActive         Boolean          @default(true)
  createdById      String
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  fields           BundleField[]
  createdBy        User             @relation("BundleCreator", fields: [createdById], references: [id])

  @@unique([name, version])
  @@map("bundles")
}

model BundleField {
  id          String    @id @default(uuid())
  bundleId    String
  formId      String?
  type        FieldType
  label       String
  placeholder String?
  required    Boolean   @default(false)
  validation  Json?
  order       Int       @default(0)
  options     Json?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  form        Form?     @relation(fields: [formId], references: [id], onDelete: Cascade)
  bundle      Bundle    @relation(fields: [bundleId], references: [id], onDelete: Cascade)

  @@map("bundle_fields")
}

model FormResponse {
  id          String           @id @default(uuid())
  formId      String
  userId      String?
  respondentEmail String?
  fingerprint String?
  submittedAt DateTime         @default(now())
  score       Int?
  totalScore  Int?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  form        Form             @relation(fields: [formId], references: [id], onDelete: Cascade)
  user        User?            @relation(fields: [userId], references: [id])
  quizScore   QuizScore?
  answers     ResponseAnswer[]

  @@map("form_responses")
}

model ResponseAnswer {
  id         String       @id @default(uuid())
  responseId String
  fieldId    String?
  value      String
  isCorrect  Boolean?
  createdAt  DateTime     @default(now())
  field      Field?       @relation(fields: [fieldId], references: [id], onDelete: SetNull)
  response   FormResponse @relation(fields: [responseId], references: [id], onDelete: Cascade)

  @@map("response_answers")
}

model QuizScore {
  id         String       @id @default(uuid())
  responseId String       @unique
  score      Int
  totalScore Int
  percentage Float
  createdAt  DateTime     @default(now())
  response   FormResponse @relation(fields: [responseId], references: [id], onDelete: Cascade)

  @@map("quiz_scores")
}

enum RoleType {
  SUPER_ADMIN
  ADMIN
  EDITOR
  VIEWER
}

enum FieldType {
  TEXT
  TEXTAREA
  NUMBER
  EMAIL
  PHONE
  DROPDOWN
  CHECKBOX
  RADIO
  DATE
  TIME
  RATE
  HEADER
  FULLNAME
  ADDRESS
  PARAGRAPH
  SUBMIT
  DIVIDER
  SECTION_COLLAPSE
  PAGE_BREAK
  GROUP
  MATRIX
  TABLE
}

enum SensitivityLevel {
  LOW
  MEDIUM
  HIGH
}

enum FormStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model ActivityLog {
  id        String   @id @default(uuid())
  formId    String
  userId    String
  action    String
  details   Json?
  createdAt DateTime @default(now())

  form Form @relation(fields: [formId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id])

  @@map("activity_logs")
}
